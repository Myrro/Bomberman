package bombermann;

import java.io.Serializable;
import java.util.ArrayList;

/**
 *
 * @author Myrro
 */
public class Package implements PackageInterface,Serializable{
    
    private int x1;
    private int x2;
    private int y1;
    private int y2;
    private ArrayList bmbs;
    private ArrayList anim;

    public Package(){
    
        
    }
    
    @Override
    public void setX1(int x) {
        
        x1=x;
    }

    @Override
    public void setX2(int x) {
        
        x2=x;
    }

    @Override
    public int getX1() {
        
        return x1;
    }

    @Override
    public int getX2() {
        
        return x2;
    }

    @Override
    public void setY1(int y) {
       
        y1=y;
    }

    @Override
    public void setY2(int y) {
        
        y2=y;
    }

    @Override
    public int getY1() {
        
        return y1;
    }

    @Override
    public int getY2() {
        
        return y2;
    }

    @Override
    public void setBombs(ArrayList bombs) {
        
        bmbs=bombs;
    }

    @Override
    public ArrayList getBombs() {
        
        return bmbs;
    }

    @Override
    public void setAnim(ArrayList anim) {
        
        this.anim=anim;
    }

    @Override
    public ArrayList getAnim() {
        
        return anim;
    }
}
