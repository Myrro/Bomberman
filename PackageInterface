package bombermann;

import java.util.ArrayList;

/**
 *
 * @author Myrro
 */
public interface PackageInterface {
    public void setX1(int x);
    public void setX2(int x);
    public int getX1();
    public int getX2();
    public void setY1(int y);
    public void setY2(int y);
    public int getY1();
    public int getY2();
    public void setBombs(ArrayList bombs);
    public ArrayList getBombs();
    public void setAnim(ArrayList anim);
    public ArrayList getAnim();
}
